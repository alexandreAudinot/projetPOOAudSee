<Window x:Class="WpfDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfDisplay"
        Title="MainWindow" Height="543" Width="531" Background="#FF51362A">
    <Grid>
        <Grid Name="Menu">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="486*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="516*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <controls:Game Grid.ColumnSpan="2" Margin="119,95,117,211" Grid.Row="1" Visibility="Collapsed" x:Name="Game"/>
            <Button Grid.ColumnSpan="2" Content="New Game" HorizontalAlignment="Left" Margin="219,226,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="New_Game"/>
            <Button Grid.ColumnSpan="2" Content="Load Game" HorizontalAlignment="Left" Margin="219,248,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Load_Game"/>

        </Grid>
        <Grid Name="ModeSelection" Visibility="Hidden">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Elfe" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="75" Click="ElfeSelectionP1"/>
        <Button Content="Orc" HorizontalAlignment="Left" Margin="0,32,0,0" VerticalAlignment="Top" Width="75" Click="OrcSelectionP1"/>
        <Button Content="Nain" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top" Width="75" Click="NainSelectionP1"/>
        <Button Content="Aléatoire" HorizontalAlignment="Left" Margin="0,81,0,0" VerticalAlignment="Top" Width="75" Click="AleatoireSelectionP1"/>
        </Grid>
    </Grid>
</Window>
