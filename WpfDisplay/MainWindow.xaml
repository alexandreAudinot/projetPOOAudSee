<Window x:Class="WpfDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WpfDisplay"
        xmlns:local="clr-namespace:WpfDisplay"
        Title="SmallWorld" Height="800" Width="1000" Background="#FF51362A">
    <Grid>
        <Grid Name="Menu">
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="486*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="516*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.ColumnSpan="2" Content="New Game" HorizontalAlignment="Left" Margin="219,226,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="NewGame"/>
            <Button Grid.ColumnSpan="2" Content="Load Game" HorizontalAlignment="Left" Margin="219,248,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="LoadGame"/>

        </Grid>
        <Grid Name="ModeSelection" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Elfe" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="ElfeSelectionP1"/>
            <Button Content="Orc" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="75" Click="OrcSelectionP1"/>
            <Button Content="Nain" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Width="75" Click="NainSelectionP1"/>
            <Button Content="Aléatoire" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="75" Click="AleatoireSelectionP1"/>
            <Button Content="Valider" HorizontalAlignment="Center" Margin="10,26,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="ValidateMode"/>
            <TextBox x:Name="nameP1" HorizontalAlignment="Left" Height="23" Margin="10,159,0,0" TextWrapping="Wrap" Text="Joueur 1" VerticalAlignment="Top" Width="120"/>
            <Image x:Name="imgP1" HorizontalAlignment="Left" Height="206" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="146" Source="Ressources/elfe.png"/>
        </Grid>
        <Grid Name="GameScene" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="300*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="411*"/>
            </Grid.ColumnDefinitions>
            <local:MapView Grid.Column="1" Margin="10,0,812,568" x:Name="mapView" Height="0" VerticalAlignment="Bottom"/>
            <Button Content="Button" Margin="10,10,2,0" Grid.Row="1" VerticalAlignment="Top" Click="test" Height="22"/>
            <local:PlayerInfo x:Name="playerInfo1" Grid.Column="1" HorizontalAlignment="Left" Margin="46,46,0,0" Grid.Row="1" VerticalAlignment="Top" Width="200" Height="105"/>
            <local:PlayerInfo x:Name="playerInfo2" Grid.Column="1" HorizontalAlignment="Right" Margin="0,46,46,0" Grid.Row="1" VerticalAlignment="Top" Width="200" Height="105"/>

        </Grid>
    </Grid>
</Window>
